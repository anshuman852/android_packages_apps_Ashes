<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
                  android:title="@string/button_title">

    <!-- Hardware Keys -->
        <Preference
            android:key="hardware_key_category"
            android:fragment="com.fh.settings.fragments.hwbuttons.HardwareButtons"
            android:icon="@drawable/ic_hw_buttons"
            android:title="@string/hw_buttons_title"
            android:summary="@string/hw_buttons_summary" />

    <!-- Volume button -->
        <Preference
            android:key="volume_buttons_category"
            android:fragment="com.fh.settings.fragments.hwbuttons.VolumeButtons"
            android:icon="@drawable/ic_volume_buttons"
            android:title="@string/volume_buttons_title"
            android:summary="@string/volume_buttons_summary" />

    <!-- Power Button -->
         <Preference
            android:key="power_buttons_category"
            android:fragment="com.fh.settings.fragments.hwbutton.PowerButton"
            android:icon="@drawable/ic_power_button"
            android:title="@string/power_button_title"
            android:summary="@string/power_button_summary" />

</PreferenceScreen>
