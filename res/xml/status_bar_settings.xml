<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
                  android:title="@string/status_bar_title">

        <!-- Status bar tuner -->
        <Preference
            android:key="systemui_tuner_statusbar"
            android:title="@string/statusbar_items_category"
            android:summary="@string/statusbar_tuner_summary"
            android:icon="@drawable/ic_systemui_tuner_statusbaritems" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
        </Preference>

        <!-- Main fragment -->
        <Preference
            android:key="traffic"
            android:fragment="com.fh.settings.fragments.statusbar.Traffic"
            android:icon="@drawable/ic_traffic"
            android:title="@string/traffic_title"
            android:summary="@string/traffic_summary" />

        <!-- Main fragment -->
        <Preference
            android:key="pulldown"
            android:fragment="com.fh.settings.fragments.statusbar.Pulldown"
            android:icon="@drawable/ic_pulldown"
            android:title="@string/pulldown_title"
            android:summary="@string/pulldown_summary" />

        <!-- Main fragment -->
        <Preference
            android:key="indicators_category"
            android:fragment="com.fh.settings.fragments.statusbar.Indicators"
            android:icon="@drawable/ic_indicators"
            android:title="@string/indicators_title"
            android:summary="@string/indicators_summary" />

        <!-- Main fragment -->
        <Preference
            android:key="ticker_category"
            android:fragment="com.fh.settings.fragments.statusbar.Ticker"
            android:icon="@drawable/ic_cursor"
            android:title="@string/ticker_screen_title"
            android:summary="@string/ticker_screen_summary" />

        <!-- Main fragment -->
        <Preference
            android:key="battery_bar_category"
            android:fragment="com.fh.settings.fragments.statusbar.BatteryBar"
            android:icon="@drawable/ic_battery_bar"
            android:title="@string/battery_bar_title"
            android:summary="@string/battery_bar_summary" />

      <!-- Status bar clock customizations -->
         <Preference
         android:fragment="com.crdroid.settings.fargments.statusbar.ClockSettings"
         android:key="crdroid_clock_settings"
         android:title="@string/clock_settings_title"
         android:summary="@string/clock_settings_summary" />
</PreferenceScreen>
